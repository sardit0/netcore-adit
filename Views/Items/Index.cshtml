@model IEnumerable<Inventaris.Models.Item>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Template/Backend.cshtml";
}
<h3 class="m-3 text-uppercase">ITEM PAGE</h3>
<hr>
<div class="card p-3">
    <div class="card-body">
        <a asp-action="Create" class="btn btn-primary" enctype="multipart/form-data"gggggtttt>Create New +</a>
        <table class="table mb-0 table-striped">
            <thead>
                <tr>
                    <th scope="col" class="text-center">No</th>
                    <th scope="col">Name</th>
                    <th scope="col" class="text-center">Quantity</th>
                    <th scope="col">Description</th>
                    <th scope="col" class="text-center">Date Added</th>
                    <th scope="col">Image</th>
                    <th scope="col">Category Name</th>
                    <th scope="col">Supplier Name</th>
                    <th scope="col" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 1;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">@i</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td class="text-center">
                            @item.DateAdded.ToString("d MMMM yyyy")
                        </td>
                        <td>
                            <img src="@item.ImagePath" alt="Image" style="width: 100px; height: 100px;" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Category.CategoryName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Supplier.SupplierName)
                        </td>
                        <td class="text-center">
                            <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id"><i
                                    class="mdi mdi-table-edit"></i> Edit</a> |
                            <a href="javascript:;" onclick="confirmDelete('@item.Id')" class="btn btn-danger">
                                <i class="mdi mdi-delete"></i> Delete
                            </a>
                        </td>
                    </tr>
                    i++;
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    function confirmDelete(itemId) {
        Swal.fire({
            title: 'Are you sure?',
            text: "This action cannot be undone!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Yes, delete it!',
            cancelButtonText: 'No, cancel!'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = '/Items/Delete/' + itemId;
            }
        });
    }
</script>

@if (TempData["SuccessMessage"] != null)
{
    <script>
        Swal.fire({
            title: 'Success!',
            text: '@TempData["SuccessMessage"]',
            icon: 'success',
            confirmButtonText: 'OK'
        });
    </script>
}
